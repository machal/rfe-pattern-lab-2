<div class="quiz {{#mainImage}}has-cover-img{{/mainImage}}">
    <!-- step 1---------------------------- -->
    {{#step-1}}
    <div id="step-1">
        {{> molecules-quiz-intro }}
    </div>
    {{/step-1}}

    <!-- step 2---------------------------- -->
    {{#step-2}}
    <div id="step-2">
        {{> molecules-quiz-question-select }}
    </div>
    {{/step-2}}

    <!-- step 3---------------------------- -->
    {{#step-3}}
    <div id="step-3">
        {{> molecules-quiz-question-answered }}
    </div>
    {{/step-3}}

    <!-- step 4---------------------------- -->
    {{#step-4}}
    <div id="step-4">
        {{> molecules-quiz-results }}
    </div>
    {{/step-4}}


    <!-- patternlab only -->
    {{#use-script}}
    <style>
        #step-2, #step-3, #step-4{
            display: none;
        }
    </style>

    <script>
        var buttons = document.querySelectorAll(".patternlab-switch");
        for (var i = 0; i < buttons.length; i++) {
            buttons[i].onclick = function () {
                console.log(this);
                document.getElementById(this.getAttribute("data-hide")).setAttribute("style", "display:none;");
                document.getElementById(this.getAttribute("data-display")).setAttribute("style", "display:block;");
                return false;
            }
        }
    </script>
    {{/use-script}}

</div>
