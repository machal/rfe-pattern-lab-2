
<div class="container">


    <div class="col-xs-12 col-sm-12 col-md-7 col-md-offset-2 col-lg-7 col-lg-offset-2 pull-left bottom-offset content-offset">

        <!-- intro -->
        {{^introTop}} <!-- if not at the top of the page (above image) -->
        {{> molecules-intro}}
        {{/introTop}}

        {{#displayContentItems}}

        <div class="content-loader">
            <p>
                <a class="btn" data-ajaxplaceholder="#video-content" data-textshow="{{ btn_text.show_details }}" data-texthide="{{ btn_text.hide_details }}" href="#video-content">{{ btn_text.show_details }}</a>
            </p>
        </div>
        {{/displayContentItems}}

          <!-- comments -->
        {{> molecules-comments}}
    </div>


    <!-- secondary part -->
    <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3 pull-right">
        <!-- Related -->
        <div class="media-block-wrap">
            <h3 class="section-head">{{ section-head.related }}</h3>
            <div class="row">
                {{> molecules-media-block-holder(size:4, item-count:two, class:"col-xs-12 col-sm-6 col-md-12 col-lg-12", showIntro:false, showTitle:true, showImg:true, showCategory:true, showTime:false, showDate:false, showDateRelative:false, showCounter:false,horizontal:true) }}
            </div>
        </div>
    </div>



    <!-- Other widgets - primary part -->
    <div class="col-xs-12 col-md-7 col-md-offset-2 pull-left">
        <div class="content-offset">

            <!-- Epizodes -->
            <div class="media-block-wrap">
                {{#specific-items-episodes}}
                {{> molecules-media-block-holder-header }}
                <div class="row">
                    {{> molecules-media-block-holder-specific(size:4, item-count:eight, class:"col-xs-6 col-sm-4 col-md-4 col-lg-4", showIntro:false, showTitle:true, showImg:true, showCategory:false, showTime:false, showDate:true, showDateRelative:false, showCounter:false,horizontal:false, showLink:true) }}
                </div>
                {{> molecules-media-block-holder-footer }}
                {{/specific-items-episodes}}

                {{^specific-items-episodes}}
                <h3 class="section-head">{{ section-head.episodes }}</h3>
                <div class="row">
                    {{> molecules-media-block-holder(size:4, item-count:six, class:"col-xs-6 col-sm-4 col-md-4 col-lg-4", showIntro:false, showTitle:true, showImg:true, showCategory:false, showTime:false, showDate:true, showDateRelative:false, showCounter:false,horizontal:false, showLink:true) }}
                </div>
                {{/specific-items-episodes}}

            </div>

            <!-- Cross links -->
            <div class="media-block-wrap">
                <hr class="line-head" />
                {{#show-crosslink-tv-programs}}
                <a href="{{link-crosslink-tv-programs}}" class="crosslink-important">
                    <i class="ico ico-chevron-forward pull-right"></i>
                    <strong>
                        <i class="ico ico-play-rounded pull-left"></i>
                        {{ texts.tv_programs }}
                    </strong>
                </a>
                {{/show-crosslink-tv-programs}}
                {{#show-crosslink-radio-programs}}
                <a href="{{link-crosslink-radio-programs}}" class="crosslink-important">
                    <i class="ico ico-chevron-forward pull-right"></i>
                    <strong>
                        <i class="ico ico-play-rounded pull-left"></i>
                        {{ texts.radio_programs }}
                    </strong>
                </a>
                {{/show-crosslink-radio-programs}}
                {{#show-crosslink-videos}}
                <a href="{{link-crosslink-videos}}" class="crosslink-important">
                    <i class="ico ico-chevron-forward pull-right"></i>
                    <strong>
                        <i class="ico ico-video pull-left"></i>
                        {{ texts.videos }}
                    </strong>
                </a>
                {{/show-crosslink-videos}}
            </div>


        </div>
    </div>

    <!-- Other widgets - right region - secondary part -->
    {{#right-region-enabled}}
    <div class="col-xs-12 col-md-3 col-lg-3 pull-right">
        <!-- Custom widget -->
        <div class="media-block-wrap">
            <h3 class="section-head">{{ section-head.custom-widget }}</h3>
            <div class="row">
                {{> molecules-media-block-holder(size:4, item-count:four, class:"col-xs-12 col-sm-6 col-md-12 col-lg-12", showIntro:false, showTitle:true, showImg:true, showCategory:true,  showTime:false, showDate:false, showDateRelative:false, showCounter:false,horizontal:true) }}
            </div>
        </div>
    </div>
    {{/right-region-enabled}}

</div><!-- /.container-->
