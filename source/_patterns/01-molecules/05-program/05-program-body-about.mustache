<div clas="row">
    
    <!-- sharing tools -->
    <div class="col-xs-12 col-sm-12 col-md-2 col-lg-2 pull-left">
      {{> molecules-content-sharing }}

      <!-- REMOVED 
      <p class="link-comments">
        <a href="#comments">
          {{ texts.see_comments }} <i class="ico ico-chevron-down"></i>
        </a>
      </p>
      -->

    </div>
    
    <!-- main content -->
    <div class="col-xs-12 col-sm-12 col-md-7 col-lg-7 pull-left">
        <div id="article-content" class="content-offset">

            <!-- main content -->
            {{> molecules-content}}

            <!-- author highlight -->
            {{> molecules-author-highlight}}
      </div>  
    </div>

    {{#right-region-enabled}}
    <!-- secondary part - right-region -->
    <div class="col-xs-12 col-lg-3 pull-right">

      <!-- HTML widget -->
      <div class="media-block-wrap">
        <h3 class="section-head">{{ section-head.schedule_and_frequencies }}</h3>
        <div class="wg-content text">
          <p>
            <a href="#">{{ texts.shortwave }}</a>
            <br />
            <a href="#">{{ texts.tv_satellites }}</a>
          </p>
        </div>
      </div>

      <!-- HTML widget -->
      <div class="media-block-wrap">
        <h3 class="section-head">{{ section-head.subscribe }}</h3>
        <div class="wg-content text">
          <p>
            <a href="#">{{ texts.podcast }}</a>
            <br />
            <a href="#">{{ texts.rss }}</a>
            <br />
            <a href="#">{{ texts.itunes }}</a>
            <br />
            <a href="#">{{ texts.newsletter }}</a>
          </p>
        </div>
      </div>

    </div>
    {{/right-region-enabled}}
    
    
    
</div><!-- /.row -->
