<div id="content">
    <div class="container">
        <div class="row">

            <div class="col-category col-xs-12 col-lg-12 pull-right">
                <div class="row">

                    <!-- primary part -->
                    <div class="col-xs-12 col-md-9 col-lg-9 pull-left content-offset">
                        {{> molecules-page-title }}
                        {{> molecules-calendar-component }}

                        <section>
                            <!-- main content / layouts -->
                            {{#archive-layout-thumbnails}}
                            {{> molecules-archive-layout-thumbnails }}
                            {{/archive-layout-thumbnails}}

                            {{#archive-layout-blog}}
                            {{> molecules-archive-layout-blog }}
                            {{/archive-layout-blog}}
                        </section>
                        {{> atoms-button-load-more}}
                    </div>

                    <!-- secondary part -->
                    {{#right-region-enabled}}
                    <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3 pull-right">
                        <!-- right-region -->
                        {{> molecules-region}}
                    </div>
                    {{/right-region-enabled}}

                </div><!-- /.row -->
            </div>

            <!-- bottom part -->
            <div class="col-xs-12 media-block-wrap">
                <!-- You might like... -->
                <div class="media-block-wrap">
                    <h3 class="section-head">{{ section-head.you-might-like }}</h3>
                    <div class="row">
                        {{> molecules-media-block-holder(size:4, item-count:"six", class:"col-xs-12 col-sm-6 col-md-4 col-lg-4", showIntro:false, showTitle:true, showImg:true, showCategory:true, showTime:false, showDate:false, showDateRelative:false, showCounter:false,horizontal:true) }}
                    </div>
                </div>
            </div>

        </div><!-- /.row -->
    </div><!-- /.container-->
</div><!-- /.page-->
