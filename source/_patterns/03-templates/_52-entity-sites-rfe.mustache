{{^page-no-header-no-footer}}<!-- if not tru, will display header & footer - USED for Quiz-embedded page -->
{{> molecules-header }}
{{/page-no-header-no-footer}}

<div id="content">
    <div class="container">

        <div class="wsw"><!-- class generated by HTML widget -->
            <div class="pg-entity-sites">

                <h1>{{ title }}</h1>

                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <ul class="categories">
                            {{#specificItems}}
                            {{#items}}
                            <li>
                                <h5 class="category">{{section-title}}</h5>
                                {{#sites}}
                                <div class="ent-site">
                                    <div class="ent-site__name">
                                        <span class="title">
                                            {{name}}
                                        </span>
                                        {{#orig-name}}
                                        <span class="title-orig{{#orig-img}} replace-by-img {{orig-img}}{{/orig-img}}">
                                            {{orig-name}}
                                        </span>
                                        {{/orig-name}}
                                    </div>                                    
                                    <div class="ent-site__links">
                                        {{#links}}
                                        <span class="url">
                                            <a href="{{url}}" title="{{text}}">{{text}}</a>                                        
                                        </span>
                                        {{/links}}
                                    </div>                                                                                                       
                                </div>
                                {{/sites}}
                            </li>
                            {{/items}}
                            {{/specificItems}}
                        </ul>
                    </div>
                </div>
            </div>
        </div>

    </div><!-- /.container-->
</div><!-- /.page-->

{{^page-no-header-no-footer}}   <!-- if not true, will display header & footer - USED for Quiz-embedded page -->
{{> molecules-footer }}
{{/page-no-header-no-footer}}  