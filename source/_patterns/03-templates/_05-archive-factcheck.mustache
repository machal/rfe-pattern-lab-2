{{^page-no-header-no-footer}}<!-- if not tru, will display header & footer - USED for Quiz-embedded page -->
{{> molecules-header }}
{{/page-no-header-no-footer}}

<div id="content">
    <div class="container">
        <div class="row">

            <div class="col-category col-xs-12 col-lg-12 pull-right">
                <div class="row">

                    <!-- primary part -->
                    {{#specific-items_polygraph}}
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        {{> molecules-page-title }}
                        {{> molecules-calendar-component }}

                        <section>
                            <div class="media-block-wrap">
                                {{> molecules-widget-factcheck}}
                            </div>
                        </section>
                        {{> atoms-button-load-more}}
                    </div>
                    {{/specific-items_polygraph}}

                </div>
            </div>
        </div><!-- /.row -->
        <!-- bottom part -->
        <div class="row">
            <div class="col-xs-12 media-block-wrap">
                <!-- You might like... -->
                <div class="media-block-wrap">
                    <h3 class="section-head">{{ section-head.you-might-like }}</h3>
                    <div class="row">
                        {{> molecules-media-block-holder(size:4, item-count:"six", class:"col-xs-12 col-sm-6 col-md-4 col-lg-4", showIntro:false, showTitle:true, showImg:true, showCategory:true, showTime:false, showDate:false, showDateRelative:false, showCounter:false,horizontal:true) }}
                    </div>
                </div>
            </div>

        </div><!-- /.row -->
    </div><!-- /.container-->
</div><!-- /.page-->

{{^page-no-header-no-footer}}   <!-- if not tru, will display header & footer - USED for Quiz-embedded page -->
{{> molecules-footer }}
{{/page-no-header-no-footer}}

