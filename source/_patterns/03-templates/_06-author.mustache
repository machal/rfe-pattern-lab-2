{{^page-no-header-no-footer}}<!-- if not tru, will display header & footer - USED for Quiz-embedded page -->
{{> molecules-header }}
{{/page-no-header-no-footer}}

<div id="content">
    <div class="hdr-container">
        <div class="container">
            <div class="row">

                <!-- author -->
                <div class="col-xs-12 col-md-9 pull-left bottom-offset content-offset">
                    <!-- author-page -->
                    {{#author-page }}
                    {{#authors }}
                    {{#item }}
                    {{> molecules-author}}
                    {{/item }}
                    {{/authors}}
                    {{/author-page}}
                </div>

                <!-- author's articles -->
                <div class="col-lg-9 pull-left">
                    <div class="media-block-wrap">
                        <h3 class="section-head">{{ section-head.produced-by }} {{author.name}}</h3>
                        <div class="small-thums-list">
                            <div class="row">
                                {{> molecules-media-block-holder(size:4, item-count:"six", class:"col-xs-12 col-sm-12 col-md-12 col-lg-12", showIntro:true, showTitle:true, showImg:true, showCategory:false, showTime:false, showDate:true, showDateRelative:false, showCounter:false,horizontal:true) }}
                            </div>
                        </div>
                    </div>
                    {{> atoms-button-load-more}}
                </div>


                {{#right-region-enabled}}
                <!-- secondary part - right-region -->
                <div class="col-xs-12 col-lg-3 pull-right design-top-offset">
                    <!-- Top Stories -->
                    <div class="media-block-wrap">
                        {{#specific-items-top-stories }}
                        <h3 class="section-head">{{ widget-top-stories }}</h3>
                        <div class="row">
                            {{> molecules-media-block-holder-specific(size:4, class:"col-xs-12 col-sm-6 col-md-12 col-lg-12", showIntro:false, showTitle:true, showImg:true, showCategory:false, showTime:false, showDate:false, showDateRelative:false, showCounter:false,horizontal:true) }}
                        </div>
                        {{/specific-items-top-stories }}

                        {{^specific-items-top-stories }}
                        <h3 class="section-head">{{ section-head.top-stories }}</h3>
                        <div class="row">
                            {{> molecules-media-block-holder(size:4, item-count:"four", class:"col-xs-12 col-sm-6 col-md-12 col-lg-12", showIntro:false, showTitle:true, showImg:true, showCategory:true, showTime:false, showDate:false, showDateRelative:false, showCounter:false,horizontal:true) }}
                        </div>
                        {{/specific-items-top-stories }}
                    </div>
                </div>
                {{/right-region-enabled}}

            </div><!-- /.row -->
        </div><!-- /.container-->
    </div><!-- /.hdr-container -->
</div><!-- /.page-->

{{^page-no-header-no-footer}}   <!-- if not tru, will display header & footer - USED for Quiz-embedded page -->
{{> molecules-footer }}
{{/page-no-header-no-footer}}
