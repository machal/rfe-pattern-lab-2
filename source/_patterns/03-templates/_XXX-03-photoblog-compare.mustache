
<div id="content">
  <div class="media-container">
    <!-- item header -->
    <div class="container">
        <div class="row">
            <div class="col-multimedia col-xs-12 col-md-10  pull-right">
        <!-- image -->
        <div class="media-pholder image compare">
          <div class="first">
            <h4>Before</h4>
            <div class="thumb">
              <img src="http://gdb.rferl.org/6AE84099-80B2-45BF-A31A-B8567A291039_w900_r1_n_s.jpg" alt="Chinese worker, wearing a face mask and a Santa hat" />
            </div>
          </div>
          <div class="second">
            <span class="handler"><i class="ico ico-reply"></i></span>
            <h4>Now</h4>
            <div class="thumb">
                <img src="http://gdb.rferl.org/A8B33DB2-23B0-4798-8DE0-1777AC79E078_w900_r1_n_s.jpg" alt="Chinese worker, wearing a face mask and a Santa hat" />
            </div>
          </div>
        </div>
        <div>
          <span class="img-number">1</span>
          <!-- if Photoblog, wrap in <div> and add image class  -->

          <p class="caption">Ronghui Chen, Chinese photographer of <b>City Express</b>, won Second Prize in the Contemporary Issues Category, Singles, â€‹with this picture of Wei, a 19-year-old Chinese worker, wearing a face mask and a Santa hat, standing next to Christmas
            decorations being dried in a factory as red powder used for coloring hovers in the air, in Yiwu, China.</p>
        </div>
      </div>
        </div>
    </div>
  </div>
</div>
<!-- item-body -->
<div class="container" id="more-info">
  <!-- <div class="col-xs-12 col-sm-12 col-md-7 col-md-offset-2 col-lg-7 col-lg-offset-2 pull-left bottom-offset">-->
  {{#displayContentItems}}
    <!-- "main content" - hidden by default, loaded by Ajax (or by URL parameter for devices without JavaScript support) -->
    <div id="photoblog-content" class="content-offset">
      <!-- main content -->
      {{> molecules-content}}
    </div>
    <!-- /#video-content -->
    <!-- button for "content loading" -->
    <div class="content-loader">
      <p>
        <a class="btn" data-smoothscroll="disabled" data-ajaxplaceholder="#photoblog-content" data-textshow="{{ btn_text.show_details }}" data-texthide="{{ btn_text.hide_details }}" href="#photoblog-content">{{ btn_text.show_details }}</a>
      </p>
    </div>
  {{/displayContentItems}}

  <!-- </div>-->

  <!-- secondary part -->
  <div class="row">
    <div class="col-xs-12 col-md-3 pull-right">
      <!-- Related -->
      <div class="media-block-wrap">
        <h3 class="section-head">{{ section-head.related }}</h3>
        <div class="row">
            {{> molecules-media-block-holder(size:4, item-count:"two", class:"col-xs-12 col-sm-6 col-md-12 col-lg-12", showIntro:false, showTitle:true, showImg:true, showCategory:true, showTime:false, showDate:false, showDateRelative:false,horizontal:true) }}
        </div>
      </div>
    </div>

    <!-- Other widgets - primary part -->
    <div class="col-xs-12 col-md-7 col-md-offset-2 pull-left">
      <div class="content-offset">
        {{#category-menu}}
          <!-- Categories -->
          {{> molecules-category-menu }}
        {{/category-menu}}

      </div>
    </div>
    <!-- bottom part -->
    <div class="col-xs-12">
      <!-- Comments -->
      <div id="comments">
        {{> molecules-comments}}
      </div>
      <!-- You might like... -->
      <div class="media-block-wrap">
        <h3 class="section-head">{{ section-head.you-might-like }}</h3>
        <div class="row">
            {{> molecules-media-block-holder(size:4, item-count:"six", class:"col-xs-12 col-sm-6 col-md-4 col-lg-4", showIntro:false, showTitle:true, showImg:true, showCategory:true, showTime:false, showDate:false, showDateRelative:false,horizontal:true) }}
        </div>
      </div>
    </div>
  </div><!-- /.row -->

</div>
<!-- /.container-->
</div>
<!-- /.page-->
