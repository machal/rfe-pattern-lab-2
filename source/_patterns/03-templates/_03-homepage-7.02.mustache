{{^page-no-header-no-footer}}<!-- if not tru, will display header & footer - USED for Quiz-embedded page -->
{{> molecules-header }}
{{/page-no-header-no-footer}}

<div id="content">
    {{> molecules-section-page-title-wrapper }}
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-lg-8 pull-left flip">

                <!-- TOP Story -->
                <div class="media-block-wrap">
                    <div class="row">

                        {{#specific-items-with-quiz-big}}
                            <div class="col-xs-12">{{>molecules-media-block-holder-header}}</div>
                            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6" >
                                <div class="row">
                                    {{> molecules-media-block-holder-specific(size:2, item-count:"one", class:"col-xs-12 col-sm-12 col-md-12 col-lg-12", showIntro:true, showTitle:true, showImg:true, showCategory:false, showTime:false, showDate:false, showDateRelative:false, showCounter:false,horizontal:false) }}
                                </div>
                            </div>
                        {{/specific-items-with-quiz-big}}

                        {{#specific-items-with-quiz}}
                            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 follow-up-list">
                                <div class="row">
                                    {{> molecules-media-block-holder-specific(size:4, item-count:"four",  class:"col-xs-12 col-sm-12 col-md-12 col-lg-12", showIntro:false, showTitle:true, showImg:true, showCategory:false, showTime:false, showDate:false, showDateRelative:true, showCounter:false,horizontal:true) }}
                                </div>
                                {{> molecules-media-block-holder-footer}}
                            </div>
                        {{/specific-items-with-quiz}}

                    </div><!-- /.row -->
                </div>

                <!-- SUB stories -->
                <!--
                <div class="media-block-wrap col-xs-12 col-sm-12 col-md-12">
                    <div class="row">
                        {{!> molecules-media-block-holder(size:4, item-count:"two", class:"col-xs-12 col-sm-6 col-md-6 col-lg-6", showIntro:false, showTitle:true, showImg:true, showCategory:false, showTime:false, showDate:false, showDateRelative:false, showCounter:false,horizontal:true) }}
                    </div>
                </div>
                -->
            </div>
        </div><!-- /.row -->


        <!-- Poll -->


        <!-- patternlab-only -->
        <div class="" style="clear:both"></div>
        <hr>
        <!--/patternlab-only-->

        <!-- #2 row -->

        <div class="row">
         <!-- Poll - vote -->
        {{#step-1}}
            <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
            {{> molecules-poll}}
            </div>
        {{/step-1}}

        <!-- Poll - see results -->
        {{#step-2}}
            <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
            {{> molecules-poll}}
            </div>
        {{/step-2}}

        <!-- Poll - closed -->
        {{#step-3}}
            <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
            {{> molecules-poll}}
            </div>
        {{/step-3}}
        </div>



        <!-- patternlab-only -->
        <div class="" style="clear:both"></div>
        <hr>
        <!--/patternlab-only-->

        <!-- #3 row -->
        <div class="row">
            <div class="col-md-8 col-lg-8 pull-left flip">

                <!-- TOP Story -->
                <div class="media-block-wrap">
                    {{> molecules-media-block-holder-header}}
                    <div class="row">
                        {{> molecules-media-block-holder(size:4, item-count:"eight", class:"col-xs-12 col-sm-6 col-md-6 col-lg-6", showIntro:false, showTitle:true, showImg:true, showCategory:true, showTime:false, showDate:false, showDateRelative:false, showCounter:false,horizontal:true) }}
                    </div>
                    {{> molecules-media-block-holder-footer}}
                </div>

                <!-- SUB stories -->
                <!--
                <div class="media-block-wrap col-xs-12 col-sm-12 col-md-12">
                    <div class="row">
                        {{!> molecules-media-block-holder(size:4, item-count:"two", class:"col-xs-12 col-sm-6 col-md-6 col-lg-6", showIntro:false, showTitle:true, showImg:true, showCategory:false, showTime:false, showDate:false, showDateRelative:false, showCounter:false,horizontal:true) }}
                    </div>
                </div>
                -->
            </div>
        </div><!-- /.row -->

        <!-- #4 row -->
        <div class="row">
            <!-- 3-Big img -->
            <div class="media-block-wrap col-xs-12 col-sm-12 col-md-12 col-lg-12 ">
                <hr/>
                <div class="row">
                    {{> molecules-media-block-holder(size:2, item-count:"three", class:"col-xs-12 col-sm-6 col-md-4 col-lg-4", showIntro:false, showTitle:true, showImg:true, showCategory:true, showTime:false, showDate:false, showDateRelative:false, showCounter:false,horizontal:false) }}
                </div>
            </div>
        </div><!-- /.row -->

    </div><!-- /.container-->

</div><!-- /.page-->
