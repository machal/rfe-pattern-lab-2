{{^page-no-header-no-footer}}<!-- if not tru, will display header & footer - USED for Quiz-embedded page -->
{{> molecules-header }}
{{/page-no-header-no-footer}}

<div id="content">
    <div class="hdr-container">

        {{>molecules-panel-search-inpage }}

        <div class="container">
            <div class="row">
                <div class="srch-result col-xs-12 col-md-12 pull-right">
                    <h4 class="srch-result-info">
                        Your search for
                        <span class="keyword">Obama</span>
                        found
                        <span class="results-count">12345</span>
                        matches.
                    </h4>
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8 ">
                            <div class="media-block-wrap">
                                {{#has-specific-items }}
                                <div class="row">
                                    {{> molecules-media-block-holder-specific(size:3, class:"col-xs-12 col-sm-12 col-md-12 col-lg-12", showIntro:true, showTitle:true, showImg:false, showCategory:false, showTime:false, showDate:true, showDateRelative:false, showCounter:false,horizontal:true) }}
                                </div>
                                {{/has-specific-items }}
                                <div class="row">
                                {{> molecules-media-block-holder(size:3, item-count:"ten", class:"col-xs-12 col-sm-12 col-md-12 col-lg-12", showIntro:true, showTitle:true, showImg:false, showCategory:false, showTime:false, showDate:true, showDateRelative:false, showCounter:false,horizontal:true) }}
                                </div>
                            </div>
                            {{> atoms-button-load-more}}
                        </div>
                    </div>
                </div><!-- /.search-result-->
            </div><!-- /.row -->
        </div><!-- /.container-->
    </div><!-- /.hdr-container -->
</div><!-- /.page-->

{{^page-no-header-no-footer}}   <!-- if not tru, will display header & footer - USED for Quiz-embedded page -->
{{> molecules-footer }}
{{/page-no-header-no-footer}}
