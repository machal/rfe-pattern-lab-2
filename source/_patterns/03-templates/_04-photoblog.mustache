{{^page-no-header-no-footer}}<!-- if not tru, will display header & footer - USED for Quiz-embedded page -->
{{> molecules-header }}
{{/page-no-header-no-footer}}

<div id="content">

    <div class="media-container">
        <!-- item header -->
        <div class="container">
            {{> molecules-item-header}}
        </div>
    </div>
    <!-- item-body -->
    <div class="container" id="more-info">
        <div class="body-container">
            <!-- <div class="col-xs-12 col-sm-12 col-md-7 col-md-offset-2 col-lg-7 col-lg-offset-2 pull-left bottom-offset">-->
            {{#displayContentItems}}
            <!-- "main content" - hidden by default, loaded by Ajax (or by URL parameter for devices without JavaScript support) -->
            <div id="photoblog-content" class="content-offset">
                <!-- main content -->
                {{> molecules-content}}
            </div>
            <!-- /#video-content -->
            <!-- button for "content loading" -->
            <div class="content-loader">
                <p>
                    <a class="btn" data-smoothscroll="disabled" data-ajaxplaceholder="#photoblog-content" data-textshow="{{ btn_text.show_details }}" data-texthide="{{ btn_text.hide_details }}" href="#photoblog-content">{{ btn_text.show_details }}</a>
                </p>
            </div>
            {{/displayContentItems}}
            <!-- intro  -->
            <div class="col-xs-12 col-sm-12 col-md-7 col-md-offset-2 col-lg-7 col-lg-offset-2 pull-left bottom-offset content-offset">
                {{^introTop}} <!-- if not at the top of the page (above image) -->
                {{> molecules-intro}}
                {{/introTop}}

                <!-- comments  -->
                {{> molecules-comments}}
            </div>


            <!-- secondary part -->
            <div class="row">
                <div class="col-xs-12 col-md-3 pull-right">
                    <!-- Related -->
                    <div class="media-block-wrap">
                        <h3 class="section-head">{{ section-head.related }}</h3>
                        <div class="row">
                            {{> molecules-media-block-holder(size:4, item-count:"two", class:"col-xs-12 col-sm-6 col-md-12 col-lg-12", showIntro:false, showTitle:true, showImg:true, showCategory:true, showTime:false, showDate:false, showDateRelative:false,horizontal:true) }}
                        </div>
                    </div>
                </div>


                <!-- Other widgets - primary part -->
                <div class="col-xs-12 col-md-7 col-md-offset-2 pull-left">
                    <div class="content-offset">
                        <!-- Categories -->
                        {{#category-menu}}
                        {{> molecules-category-menu }}
                        {{/category-menu}}

                    </div>
                </div>

                <!-- Other widgets - secondary part
                <div class="col-xs-12 col-md-3 pull-right">
                    <!-- Custom widget
                    <div class="media-block-wrap">
                        <h3 class="section-head">{{ section-head.custom-widget }}</h3>
                        <div class="row">
                            {{!> molecules-media-block-holder(size:4, item-count:"four", class:"col-xs-12 col-sm-6 col-md-12 col-lg-12", showIntro:false, showTitle:true, showImg:true, showCategory:true, showTime:false, showDate:false, showDateRelative:false,horizontal:true) }}
                        </div>
                    </div>
                </div>-->

            </div><!-- /.row -->
        </div>
    </div><!-- /.container-->

    <!-- bottom part -->
    {{!> molecules-comments}}
    {{!> molecules-slide-in-widget}}
    {{> molecules-you-might-like}}


</div><!-- /.content-->

{{^page-no-header-no-footer}}   <!-- if not tru, will display header & footer - USED for Quiz-embedded page -->
{{> molecules-footer }}
{{/page-no-header-no-footer}}

